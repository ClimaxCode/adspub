<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/dialog_bg"
    android:padding="16dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="@dimen/_20sdp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_8sdp"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="start"
        android:text="@string/exit_app"
        android:textColor="@color/txtcolorprimaryLight"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:layout_marginBottom="@dimen/_5sdp"
        android:id="@+id/desc"
        android:text="@string/are_you_to_exit"
        android:textColor="@color/txtcolorsecondayLight"
        android:textSize="14sp"/>


       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:id="@+id/container1"
           android:visibility="gone"
           android:layout_height="wrap_content">

           <include
               android:id="@+id/layout"
               layout="@layout/native1_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </androidx.constraintlayout.widget.ConstraintLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:id="@+id/container2"
           android:visibility="gone"
           android:layout_height="wrap_content">

           <include
               android:id="@+id/layout2"
               layout="@layout/native2_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </androidx.constraintlayout.widget.ConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:id="@+id/container3"
           android:visibility="gone"
           android:layout_height="wrap_content">

           <include
               android:id="@+id/layout3"
               layout="@layout/native3_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </androidx.constraintlayout.widget.ConstraintLayout>


       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:id="@+id/container4"
           android:visibility="gone"
           android:layout_height="wrap_content">

           <include
               android:id="@+id/layout4"
               layout="@layout/native4_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </androidx.constraintlayout.widget.ConstraintLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:id="@+id/container5"
           android:visibility="gone"
           android:layout_height="wrap_content">

           <include
               android:id="@+id/layout5"
               layout="@layout/native5_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </androidx.constraintlayout.widget.ConstraintLayout>




       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:id="@+id/container6"
           android:visibility="gone"
           android:layout_height="wrap_content">

           <include
               android:id="@+id/layout6"
               layout="@layout/native6_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </androidx.constraintlayout.widget.ConstraintLayout>


       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:id="@+id/container7"
           android:visibility="gone"
           android:layout_height="wrap_content">

           <include
               android:id="@+id/layout7"
               layout="@layout/native7_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </androidx.constraintlayout.widget.ConstraintLayout>


       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:id="@+id/container8"
           android:visibility="gone"
           android:layout_height="wrap_content">

           <include
               android:id="@+id/layout8"
               layout="@layout/native8_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </androidx.constraintlayout.widget.ConstraintLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:id="@+id/container9"
           android:visibility="gone"
           android:layout_height="wrap_content">

           <include
               android:id="@+id/layout9"
               layout="@layout/small_native_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/container10"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/layout10"
                layout="@layout/native9_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/container11"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/layout11"
                layout="@layout/native10_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Buttons for Exit and Cancel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:paddingHorizontal="@dimen/_30sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/txtcolorprimaryLight"
            />
        <TextView
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:paddingHorizontal="@dimen/_30sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/txtcolorprimaryLight"
          />


    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
