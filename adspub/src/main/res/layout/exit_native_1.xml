<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bgcolor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:padding="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container1"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout"
            layout="@layout/native1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container2"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout2"
            layout="@layout/native2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container3"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout3"
            layout="@layout/native3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container4"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout4"
            layout="@layout/native4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container5"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout5"
            layout="@layout/native5_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container6"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout6"
            layout="@layout/native6_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container7"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout7"
            layout="@layout/native7_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container8"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout8"
            layout="@layout/native8_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container9"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/layout9"
            layout="@layout/small_native_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/exit_app"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/are_you_to_exit"
        android:textColor="#666666"
        android:textSize="14sp" />

    <!-- Buttons for Exit and Cancel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/green_outline_button"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="@dimen/_8sdp"
            android:text="EXIT"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/main_color"
            android:foreground="?attr/selectableItemBackground"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            app:cornerRadius="@dimen/_20sdp" />
    </LinearLayout>
</LinearLayout>
